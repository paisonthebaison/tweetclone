<div class="contents row">
  <div class="container">
    <%= form_with(model: @tweet, local: true,class: 'newForm') do |form| %>
      <h3 class="postTitle">
        Edit your post
      </h3>
      <%= form.text_field :name, placeholder: "Nickname" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "text" , rows: "10",class:'newTextarea' %>
      <%= form.submit "SEND", class:'sendBtn' %>
    <% end %>
  </div>
</div>